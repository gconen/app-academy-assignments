<h1><%= (@track.title.nil? ? "Untitled Track" : @track.title) %> from
        <%= render @track.album %></h1>

<pre><%= ugly_lyrics(@track.lyrics) %></pre>

<br><br>

<h3>Notes</h3>
<%= render 'shared/item_list', list: @track.notes.includes(:user) %>

<br>

<%= begin_form(track_notes_url(@track), "POST") %>
  <%= csrf_input %>
  <label>Post a note: <br>
    <textarea name="content" id="comment-content"></textarea>
  </label>
  <br>
<%= end_form("Post Note") %>

<br><br><br><br>

<%= button_to "New", new_album_track_url(@track.album), method: :get %>
<%= button_to "Edit", edit_track_url(@track), method: :get %>
<%= button_to "Delete", track_url(@track), method: :delete %>
